{
  "title": "User Registration",
  "fields": [
    {
      "type": "text",
      "label": "First Name",
      "name": "firstName",
      "validations": { "required": true, "minLength": 3 }
    },
    {
      "type": "text",
      "label": "Last Name",
      "name": "lastName",
      "validations": { "required": true }
    },
    {
      "type": "email",
      "label": "Email",
      "name": "email",
      "validations": { "required": false }
    },
    {
      "type": "select",
      "label": "Country",
      "name": "country",
      "optionsEndpoint": "/api/countries",
      "validations": { "required": true }
    },
    {
      "type": "select",
      "label": "State/Province",
      "name": "state",
      "dependsOn": "country",
      "optionsEndpoint": "/api/states?country={{country}}",
      "validations": { "required": true }
    },
    {
      "type": "select",
      "label": "City",
      "name": "city",
      "dependsOn": "state",
      "optionsEndpoint": "/api/cities?state={{state}}",
      "validations": { "required": false }
    },
    {
      "type": "checkbox",
      "label": "Accept Terms",
      "name": "terms",
      "validations": { "requiredTrue": true }
    }
  ]
}
