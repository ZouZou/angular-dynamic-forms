{
  "title": "User Registration",
  "fields": [
    {
      "type": "text",
      "label": "First Name",
      "name": "firstName",
      "validations": { "required": true, "minLength": 3 }
    },
    {
      "type": "text",
      "label": "Last Name",
      "name": "lastName",
      "validations": { "required": true }
    },
    {
      "type": "email",
      "label": "Email",
      "name": "email",
      "validations": { "required": false }
    },
    {
      "type": "select",
      "label": "Country",
      "name": "country",
      "options": ["Bangladesh", "Turkey", "Poland"],
      "validations": { "required": true }
    },
    {
      "type": "checkbox",
      "label": "Accept Terms",
      "name": "terms",
      "validations": { "requiredTrue": true }
    }
  ]
}
