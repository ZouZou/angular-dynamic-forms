            "width": "80px",
            "type": "text",
            "sortable": true
          },
          {
            "key": "name",
            "label": "Name",
            "type": "text",
            "sortable": true
          },
          {
            "key": "department",
            "label": "Department",
            "type": "text",
            "sortable": true
          },
          {
            "key": "salary",
            "label": "Salary",
            "type": "currency",
            "sortable": true,
            "align": "right"
          }
